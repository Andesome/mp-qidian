<!--pages/publish/index.wxml-->
<view class='page'>
  <view class="page__bd">
    <view class="weui-cells__title">记录内容</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">
          <textarea class="weui-textarea" bindinput="handleContentChange" placeholder="请输入文本" style="height:4em" value="{{content}}" maxlength="{{maxlength}}" />
          <view class="weui-textarea-counter">{{content.length}}/{{maxlength}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="page__bd_spacing">
    <button class="weui-btn" type="primary" bindtap="publishArticle">提交</button>
  </view>
</view>